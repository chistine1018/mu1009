            android:layout_marginTop="30dp"
            android:layout_height="80dp"
            android:background="@drawable/title01"
            android:gravity="center"
            android:paddingStart="30dp"
            android:text="蒐集冊"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
