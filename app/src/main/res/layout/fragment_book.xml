                android:id="@+id/mammalsBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="哺乳類"
                android:textColor="@color/fbutton_color_clouds"
                android:textSize="18dp"
                fbutton:cornerRadius="15dp"
                fbutton:fButtonColor="@color/fbutton_color_alizarin"
                fbutton:shadowColor="@color/fbutton_color_pomegranate"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"

                />

            <info.hoang8f.widget.FButton
                android:id="@+id/birdsBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="鳥類"
                android:textColor="@color/fbutton_color_clouds"
                android:textSize="18dp"
                fbutton:cornerRadius="15dp"
                fbutton:fButtonColor="@color/fbutton_color_orange"
                fbutton:shadowColor="@color/fbutton_color_carrot"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"

                />

            <info.hoang8f.widget.FButton
                android:id="@+id/reptileBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="爬蟲類"
                android:textColor="@color/fbutton_color_clouds"
                android:textSize="18dp"
                fbutton:cornerRadius="15dp"
                fbutton:fButtonColor="@color/fbutton_color_sun_flower"
                fbutton:shadowColor="@color/fbutton_color_orange"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"

                />

            <info.hoang8f.widget.FButton
                android:id="@+id/amphibianBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="兩棲類"
                android:textColor="@color/fbutton_color_clouds"
                android:textSize="18dp"
                fbutton:cornerRadius="15dp"
                fbutton:fButtonColor="@color/fbutton_color_emerald"
                fbutton:shadowColor="@color/fbutton_color_nephritis"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"

                />

            <info.hoang8f.widget.FButton
                android:id="@+id/fishBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
