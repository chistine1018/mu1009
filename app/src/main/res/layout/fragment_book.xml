                android:textSize="18dp"
                fbutton:cornerRadius="15dp"
                fbutton:fButtonColor="@color/colorPrimary"
                fbutton:shadowColor="@color/colorPrimaryDark"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"

                />

            <info.hoang8f.widget.FButton
                android:id="@+id/otherBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="其他"
                android:textColor="@color/fbutton_color_clouds"
                android:textSize="18dp"
                fbutton:cornerRadius="15dp"
                fbutton:fButtonColor="@color/fbutton_color_amethyst"
                fbutton:shadowColor="@color/fbutton_color_wisteria"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"

                />

