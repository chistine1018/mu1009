            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp">

                <info.hoang8f.widget.FButton
                    android:id="@+id/startBook"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:onClick="onClick"
                    android:text="蒐集冊"
                    android:textColor="@color/fbutton_color_clouds"
                    android:textSize="18dp"
                    android:visibility="gone"
                    fbutton:cornerRadius="15dp"
                    fbutton:fButtonColor="@color/fbutton_color_alizarin"
                    fbutton:shadowColor="@color/fbutton_color_pomegranate"
                    fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="5dp"

                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/footprint03"
                    android:visibility="gone" />

                <!--<TextView-->
                <!--android:id="@+id/startBook"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="50dp"-->
                <!--android:background="@drawable/main_background03"-->
                <!--android:gravity="center"-->
                <!--android:onClick="onClick"-->
                <!--android:text="蒐集冊"-->
                <!--android:textSize="18dp" />-->

            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>

