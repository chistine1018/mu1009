<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#F6AB60">


    <ImageView
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:background="@drawable/circle" />

    <com.skyfishjy.library.RippleBackground xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rb_color="#0099CC"
        app:rb_duration="3000"
        app:rb_radius="40dp"
        app:rb_rippleAmount="4"
        app:rb_scale="4"
        app:rb_type="fillRipple">

        <ImageView
            android:id="@+id/centerImage"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            android:src="@drawable/dog09"
            android:transitionName="sharedView" />

        <ImageView
            android:id="@+id/foundDevice"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_above="@id/centerImage"
            android:layout_marginBottom="32dp"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/centerImage"
            android:src="@drawable/back"
            android:visibility="invisible" />
    </com.skyfishjy.library.RippleBackground>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">




        <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/title01"
        android:gravity="center"
        android:paddingStart="30dp"
        android:text="AnimalGò"
        android:textSize="24dp"
        android:transitionName="sharedView"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="240dp"
            android:background="@drawable/dog09"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="140dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp">

                <info.hoang8f.widget.FButton
                    android:id="@+id/startCamera"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:onClick="onClick"
                    android:text="拍照辨識"
                    android:textColor="@color/fbutton_color_clouds"
                    android:textSize="18dp"
                    android:visibility="gone"
                    fbutton:cornerRadius="15dp"
                    fbutton:fButtonColor="@color/colorPrimary"
                    fbutton:shadowColor="@color/colorPrimaryDark"
                    fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="5dp"

                    />
                <!--<TextView-->
                <!--android:id="@+id/startCamera"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="50dp"-->
                <!--android:background="@drawable/main_background"-->
                <!--android:gravity="center"-->
                <!--android:onClick="onClick"-->
                <!--android:text="拍照辨識"-->
                <!--android:textSize="18dp" />-->

                <!--<ImageView-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginStart="15dp"-->
                <!--android:background="@drawable/footprint01" />-->
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="80dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="60dp">

                <info.hoang8f.widget.FButton
                    android:id="@+id/startFlipCard"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:onClick="onClick"
                    android:text="翻牌遊戲"
                    android:textColor="@color/fbutton_color_clouds"
                    android:textSize="18dp"
                    android:visibility="gone"
                    fbutton:cornerRadius="15dp"
                    fbutton:fButtonColor="@color/fbutton_color_turquoise"
                    fbutton:shadowColor="@color/fbutton_color_green_sea"
                    fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="5dp"

                    />
                <!--<TextView-->
                <!--android:id="@+id/startFlipCard"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="50dp"-->
                <!--android:background="@drawable/main_background02"-->
                <!--android:gravity="center"-->
                <!--android:onClick="onClick"-->
                <!--android:text="翻牌遊戲"-->
                <!--android:textSize="18dp" />-->

                <!--<ImageView-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginStart="15dp"-->
